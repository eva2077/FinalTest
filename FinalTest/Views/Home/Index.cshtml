@{
    ViewData["Title"] = "Home Page";
}

@*you are brining in indivisual recipes not all of them*@
@model List<Book>

<h1>Books</h1>
<a href="@Url.Action("Form", "Home")">Fill out Form</a>
@*Create a table to display*@
<table class="table table-bordered table-striped">
    <thread class="font-weight-bold">
        <tr>
            <td>Title</td>
            <td>Author</td>
            <td>Publisher</td>
            <td>ISBN</td>
            <td>Classification</td>
            <td>Category</td>
            <td>PageCount</td>
            <td>Price</td>
        </tr>
    </thread>

    @*load the data loop through and bring out results.*@
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Title</td>
                <td>@m.Author</td>
                <td>@m.Publisher</td>
                <td>@m.ISBN</td>
                <td>@m.Classification</td>
                <td>@m.Category</td>
                <td>@m.PageCount</td>
                <td>@m.Price</td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@m.BookID">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@m.BookID">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

